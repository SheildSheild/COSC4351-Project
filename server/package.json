{
  "name": "server",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "jest"
  },
  "dependencies": {
    "@babel/preset-react": "^7.24.7",
    "@testing-library/jest-dom": "^6.4.6",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "babel-preset-react-native": "^4.0.1",
    "babel-preset-vite": "^1.1.3",
    "body-parser": "^1.20.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "dayjs": "^1.11.12",
    "debug": "~2.6.9",
    "dotenv": "^16.4.5",
    "express": "~4.16.1",
    "firebase-admin": "^12.2.0",
    "http-errors": "~1.6.3",
    "jest-environment-jsdom": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "mongoose": "^8.4.5",
    "morgan": "~1.9.1",
    "pug": "2.0.0-beta11",
    "react-scripts": "^5.0.1",
    "react-test-renderer": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.9",
    "@babel/plugin-transform-modules-commonjs": "^7.24.8",
    "@babel/plugin-transform-runtime": "^7.24.7",
    "@babel/preset-env": "^7.24.8",
    "babel-jest": "^27.5.1",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "transform": {
      "\\.js$": [
        "babel-jest",
        {
          "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
          ]
        },
        {
          "plugins": [
            "@babel/transform-runtime",
            "babel-plugin-transform-import-meta"
          ]
        }
      ]
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
